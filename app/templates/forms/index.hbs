<div class="users">
	<div class="user-list">
		<div class="row">
		{{#if isUserAdmin}}
			<div class="col-xs-2">
				{{#link-to 'forms.edit' 'new'}}
				<button class='btn btn-success btn-sm'>
					<i class="icon-pencil align-top"></i>
					Create New Form
				</button>
				{{/link-to}}
			</div>
		{{/if}}
		</div>
		<div class="space"></div>
		<div class="row">
			<div class="col-xs-12">
				<div class="table-responsive">
					<table id="forms-table" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Name</th>
							{{#if isUserAdmin}}
								<th></th>
							{{/if}}
							</tr>
						</thead>

						<tbody>
						{{#each form in model}}
							<tr>
								<td>{{form.name}}</td>
							{{#if isUserAdmin}}
								<td>
									<div class="btn-group">
										{{#link-to 'forms.edit' form.id class="btn btn-xs btn-info"}}
											<i class="ace-icon fa fa-pencil bigger-120"></i>
										{{/link-to}}
										
										<button class="btn btn-xs btn-danger" {{action 'showModal' 'admin.confirmDeleteFormModal' form}}>
											<i class="ace-icon fa fa-trash-o bigger-120"></i>
										</button>
										
										{{#link-to 'forms.preview' form.id class="btn btn-xs btn-success"}}
											<i class="ace-icon fa fa-file-text bigger-120"></i>
										{{/link-to}}
									</div>
								</td>
							{{/if}}
							</tr>
						{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>