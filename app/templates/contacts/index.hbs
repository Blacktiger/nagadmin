<div class="page-header">
	<h1>
		{{#link-to 'contacts'}}Contacts{{/link-to}}
		{{#if breadcrumb}}
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			{{breadcrumb}}
		</small>
		{{/if}}
	</h1>
</div>

<div class="row">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Phone (cell)</th>
					<th>Phone (landline)</th>
					<th>Fax</th>
					<th>Type</th>
					<th>Organization</th>
				</tr>
			</thead>
			<tbody>
				{{#each contact in model}}
				<tr>
					<td>{{contact.name}}</td>
					<td>{{contact.email}}</td>
					<td>{{contact.cellNumber}}</td>
					<td>{{contact.landlineNumber}}</td>
					<td>{{contact.fax}}</td>
					<td>{{contact.type.display}}</td>
					<td>{{#each org in contact.orgs}}
							{{#link-to 'organizations.edit.profile' org.org}}{{org.orgName}}{{/link-to}}<br/>
						{{/each}}
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>