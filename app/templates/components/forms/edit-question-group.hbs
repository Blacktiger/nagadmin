<div class="panel panel-default">
	<div class="panel-heading">
		<input type="text" placeholder="Field Group Title" />

		<div class="pull-right">
			<button type="button" class="btn btn-sm btn-danger" {{action 'removeGroup' group}}>Remove Question Group</button>
		</div>
	</div>

	<div class="panel-body">
		{{forms/edit-question type="checkbox"}}

		<div class="question-group">
			<button type="button" class="btn btn-sm btn-danger pull-right">Remove Question</button>

			<div class="form-group">
				<label>Type</label>

				<select>
					<option>Text</option>
				</select>
			</div>

			<div class="form-group">
				<input class="form-control" type="text" placeholder="Question" />
			</div>

			<div class="form-group">
				<input class="form-control" type="text" placeholder="Value Placeholder" />
			</div>
		</div>

