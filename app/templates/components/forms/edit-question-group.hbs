						<button type="button" class="btn btn-sm btn-danger">Remove Option</button>
					</span>
				</div>
			</div>

			<div class="form-group">
				<button type="button" class="btn btn-sm btn-success">Add Option</button>
			</div>
		</div>

		<div class="question-group">
			<button type="button" class="btn btn-sm btn-danger pull-right">Remove Question</button>

			<div class="form-group">
				<label>Type</label>
				<select>
					<option>Multiple Choice</option>
				</select>
			</div>

			<div class="form-group">
				<input type="text" placeholder="Question" />
			</div>

			<div class="form-group">
				<label>Options</label>
				<div class="input-group">
					<span class="input-group-addon">
						<input type="checkbox" disabled />
					</span>
					<input type="text" class="form-control" placeholder="Choice" />
					<span class="input-group-btn">
						<button type="button" class="btn btn-sm btn-danger">Remove Option</button>
					</span>
				</div>

				<br />

				<div class="input-group">
					<span class="input-group-addon">
						<input type="checkbox" disabled />
					</span>
					<input type="text" class="form-control" placeholder="Choice" />
					<span class="input-group-btn">
						<button type="button" class="btn btn-sm btn-danger">Remove Option</button>
					</span>
				</div>
			</div>

			<div class="form-group">
				<button type="button" class="btn btn-sm btn-success">Add Option</button>
