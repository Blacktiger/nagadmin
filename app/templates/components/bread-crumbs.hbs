<ul class="breadcrumb">
  {{#each crumb in breadCrumbs}}
    <li {{bind-attr class="crumb.isCurrent:current:"}}>
      {{#if crumb.linkable}}
        {{#if crumb.model}}{{! to avoid null/undefined model in link-to }}
          {{#link-to crumb.path crumb.model}}
            {{crumb.label}}
          {{/link-to}}
        {{else}}
          {{#link-to crumb.path}}
            {{crumb.label}}
          {{/link-to}}
        {{/if}}
      {{else}}
        {{crumb.label}}
      {{/if}}
    </li>
  {{/each}}
</ul>